@model IEnumerable<SistemaBasico001.Models.materias>

@{
    ViewBag.Title = "Inicio Materias";
}

<h2>Materias</h2>

<p>
    @Html.ActionLink("Adicionar Nova Materia", "Create", "", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Deletar", "Delete", new { id = item.IdMateria }, new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdMateria }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>
