@model SistemaBasico001.Models.Materia_Turmas

@{
    ViewBag.Title = "Adicionar Materia";
}

<h2>Adicionar Materia</h2>

@using (Html.BeginForm("Create","Materia_Turmas",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Materia_Turmas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.idMateria, "idMateria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idMateria", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idMateria, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="number" value="@ViewBag.idTurma"name="idTurma" class="hidden"/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
