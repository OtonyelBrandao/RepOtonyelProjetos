@model SistemaBasico001.Models.Professores_Turmas

@{
    ViewBag.Title = "Create";
    var IDProfessor = ViewBag.IDProfessor;
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Professores_Alunos</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.IDTurma, "Turma", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IDTurma", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDTurma, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="number" value="@IDProfessor" name="IDProfessor" class="hidden" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Details","",new { @class = "btn btn-primary"})
</div>
