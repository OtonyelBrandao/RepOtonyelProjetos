@model IEnumerable<SistemaBasico001.Models.turmas>

@{
    ViewBag.Title = "Inicio Turmas";
}

<h2>Turmas</h2>
<form action="~/turmas/Index" method="get">
    <div class="container">
        <div class="row">
            <input type="number" placeholder="Digite o número de uma turma" name="turma" class="form-control col-md-3 " />
            <button type="submit" class="btn btn-primary col-md-2 col-md-offset-1 col-sm-offset-0">Procurar <i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br />
</form>
<p>
    @Html.ActionLink("Cadastrar Nova Turma", "Create", "", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Turma
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ano)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ano)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDTurma }, new { @class = "btn btn-primary" })
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.IDTurma }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Deletar", "Delete", new { id = item.IDTurma }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
