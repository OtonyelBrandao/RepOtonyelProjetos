@model IEnumerable<SistemaBasico001.Models.professores>

@{
    ViewBag.Title = "Inicio Professores";
}

<h2>Professores</h2>
<form action="~/professores/Index" method="get">
    <div class="container">
        <div class="row">
            <input type="text" placeholder="Digite o Nome Do Professor" name="Professor" class="form-control col-md-3 " />
            <button type="submit" class="btn btn-primary col-md-2 col-md-offset-1 col-sm-offset-0">Procurar <i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br />
</form>
<p>
    @Html.ActionLink("Cadastrar Novo Professor", "Create", "", new { @class = "btn btn-primary" })
</p>
<form method="post">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            string Nascimento = string.Format("{0:dd/MM/yyyy}", item.Nascimento);

            if (item.Ativo < 0 || item.Ativo == null)
            {
                <tr class="@ViewBag.ColunaInativa">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary" formaction="~/professores/Edit" value="@item.IDProfessor" name="IDProfessor">Editar</button>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-success" formaction="~/Professores_Turmas/Details" value="@item.IDProfessor" name="IDProfessor">Detalhes</button>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-danger" formaction="~/professores/Delete" value="@item.IDProfessor" name="IDProfessor">
                            @if (item.Ativo == 1)
                            {<span>Ativado</span> }
                            else
                            { <span>Desativado</span>}
                        </button>
                    </td>

                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary" formaction="~/professores/Edit" value="@item.IDProfessor" name="IDProfessor">Editar</button>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-success" formaction="~/Professores_Turmas/Details" value="@item.IDProfessor" name="IDProfessor">Detalhes</button>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-danger" formaction="~/professores/Delete" value="@item.IDProfessor" name="IDProfessor">
                            @if (item.Ativo == 1)
                            {<span>Ativado</span> }
                            else
                            { <span>Desativado</span>}
                        </button>
                    </td>

                </tr>
            }



        }
    </table>
</form>
